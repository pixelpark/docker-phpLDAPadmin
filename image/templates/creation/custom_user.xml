<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE template SYSTEM "../template.dtd">

<template>

<askcontainer>1</askcontainer>

	<askcontainer>1</askcontainer>
	<description>New User Account</description>
	<icon>ldap-user.png</icon>
	<invalid>0</invalid>
	<rdn>uid</rdn>
	<!--<regexp>^ou=People,o=.*,</regexp>-->
	<title>Generic: Posix User Account</title>
	<visible>1</visible>

	<objectClasses>
		<objectClass id="person"></objectClass>
		<objectClass id="organizationalPerson"></objectClass>
		<objectClass id="inetOrgPerson"></objectClass>
		<objectClass id="posixAccount"></objectClass>
		<objectClass id="shadowaccount"></objectClass>
		<objectClass id="mailRecipient"></objectClass>
		<objectClass id="inetUser"></objectClass>
	</objectClasses>

	<attributes>

		<attribute id="givenName">
			<display>First name</display>
			<icon>ldap-uid.png</icon>
			<onchange>=autoFill(cn;%givenName% %sn%)</onchange>
			<onchange>=autoFill(uid;%givenName|0-1/l%%sn/l%)</onchange>
			<order>1</order>
			<page>1</page>
		</attribute>

		<attribute id="sn">
			<display>Last name</display>
			<onchange>=autoFill(cn;%givenName% %sn%)</onchange>
			<onchange>=autoFill(uid;%givenName|0-1/l%%sn/l%)</onchange>
			<onchange>=autoFill(homeDirectory;/home/%uid|0-1/l%/%uid%)</onchange>
			<order>2</order>
			<page>1</page>
		</attribute>

		<attribute id="cn">
			<display>Common Name</display>
			<order>3</order>
			<page>1</page>
		</attribute>

		<attribute id="uid">
			<display>User ID</display>
			<onchange>=autoFill(homeDirectory;/home/%uid%)</onchange>
			<order>4</order>
			<page>1</page>
			<spacer>1</spacer>
		</attribute>

		<attribute id="userPassword">
			<display>Password</display>
			<helper>
				<display>Encryption</display>
				<id>enc</id>
				<value>=php.PasswordEncryptionTypes()</value>
			</helper>
			<icon>lock.png</icon>
			<order>5</order>
			<page>1</page>
			<post>=php.PasswordEncrypt(%enc%;%userPassword%)</post>
			<spacer>1</spacer>
			<verify>1</verify>
		</attribute>

		<attribute id="inetUserStatus">
			<display>User status</display>
			<order>6</order>
			<page>1</page>
			<type>select</type>
			<value id="active">Active</value>
			<value id="inactive">Inactive</value>
			<value id="deleted">Deleted</value>
			<spacer>1</spacer>
		</attribute>

		<attribute id="mail">
			<display>Email</display>
			<order>7</order>
			<page>1</page>
		</attribute>

		<attribute id="uidNumber">
			<display>UID Number</display>
			<icon>terminal.png</icon>
			<order>8</order>
			<page>1</page>
			<readonly>1</readonly>
			<value>=php.GetNextNumber(/;uidNumber)</value>
		</attribute>

		<attribute id="gidNumber">
			<display>GID Number</display>
			<!-- <onchange>=autoFill(homeDirectory;/home/users/%gidNumber|0-0/T%/%uid|3-%)</onchange> -->
			<order>9</order>
			<page>1</page>
			<value><![CDATA[=php.PickList(/;(&(objectClass=posixGroup));gidNumber;%cn%;;;;cn)]]></value>
		</attribute>

		<attribute id="homeDirectory">
			<display>Home directory</display>
			<!-- <onchange>=autoFill(homeDirectory;/home/users/%gidNumber|0-0/T%/%uid|3-%)</onchange> -->
			<order>10</order>
			<page>1</page>
		</attribute>

		<attribute id="loginShell">
			<display>Login shell</display>
			<order>10</order>
			<page>1</page>
			<!-- <value><![CDATA[=php.PickList(/;(&(objectClass=posixAccount));loginShell;%loginShell%;;;;loginShell)]]></value> -->
			<type>select</type>
			<value id="/bin/sh">Bourne Shell</value>
			<value id="/bin/bash">Bash</value>
			<value id="/bin/csh">C Shell</value>
			<value id="/bin/tsh">Turbo C Shell</value>
			<value id="/bin/zsh">Z Shell</value>
		</attribute>

		<attribute id="jpegPhoto">
			<display>Photo</display>
			<icon>photo.png</icon>
			<order>11</order>
			<spacer>1</spacer>
		</attribute>

		<attribute id="o">
			<display>Organisation</display>
			<order>12</order>
			<page>1</page>
		</attribute>

		<attribute id="street">
			<display>Street</display>
			<icon>mail.png</icon>
			<order>13</order>
			<page>1</page>
			<cols>50</cols>
			<rows>4</rows>
			<type>textarea</type>
		</attribute>

		<attribute id="l">
			<display>City</display>
			<order>14</order>
			<page>1</page>
		</attribute>

		<attribute id="st">
			<display>State</display>
			<order>15</order>
			<page>1</page>
		</attribute>

		<attribute id="postalCode">
			<display>Postal code</display>
			<order>16</order>
			<page>1</page>
			<spacer>1</spacer>
		</attribute>

		<attribute id="telephoneNumber">
			<display>Work phone</display>
			<icon>phone.png</icon>
			<order>17</order>
			<page>1</page>
		</attribute>

		<attribute id="mobile">
			<display>Mobile</display>
			<order>18</order>
			<page>1</page>
		</attribute>

		<attribute id="facsimileTelephoneNumber">
			<display>Fax</display>
			<order>19</order>
			<page>1</page>
		</attribute>

	</attributes>

</template>
